@model GameManagementTool.Models.AddCharacterViewModel

@{
    ViewData["Title"] = "AddNewCharacter";
}

<h2>AddNewCharacter</h2>

<h4>AddCharacterViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewCharacter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <select asp-for="@Model.SpecializationId" asp-items="@(new SelectList(Model.AllSpecializations, "Id", "Name"))" class="form-control">
                <option>Selecteer een specialization</option>
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

